{
  "name": "sports-doping-platform",
  "version": "1.0.0",
  "description": "Sports Doping Cases Database Platform",
  "main": "server.js",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "build": "cd frontend && npm install && npm run build",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend && npm install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fuzzysort": "^3.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "sports",
    "doping",
    "database",
    "education",
    "api",
    "fullstack"
  ],
